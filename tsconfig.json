{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "mocha",
      "hardhat"
    ]
  },
  "typeRoots": [
    "./types",
    "./node_modules/@types"
  ],
  "include": [
    "**/*.js",
    "**/*.d.ts"
  ]
}
