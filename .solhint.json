{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["warn", "^0.5.0"],
    "const-name-snakecase": "off",
    "mark-callable-contracts": "off",
    "max-line-length": ["warn", 100],
    "max-states-count": "off",
    "not-rely-on-time": "off",
    "reason-string": "off",
    "var-name-mixedcase": "off"
  }
}
